<%- model_class = ServiceOrder -%>
<div class="content-header">
  <h1>
    <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
    <div class="pull-right">
      <%= link_to '<i class="fa fa-plus "></i> Add'.html_safe, new_service_order_path, :class => 'btn btn-success btn-sm' %>
    </div>
  </h1>
</div>

<section class="content">
  <div class="box">
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <tbody>
          <tr>
            <th>#</th>
            <th>Date</th>
            <th><%= model_class.human_attribute_name(:observation) %></th>
            <th><%= model_class.human_attribute_name(:price) %></th>
            <th><%= model_class.human_attribute_name(:detail_order_id) %></th>
            <th>Actions</th>
          </tr>
        
          <% @service_orders.each do |service_order| %>
            <tr>
              <td><%= link_to service_order.id, service_order_path(service_order) %></td>
              <td><%= service_order.date %></td>
              <td><%= service_order.observation %></td>
              <td><%= service_order.price %></td>
              <td><%= service_order.detail_order_id %></td>
              <td>
                <%= link_to '<i class="fa fa-edit"></i>'.html_safe,
                            edit_service_order_path(service_order), :class => 'btn btn-xs btn-warning' %>
                <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe,
                            service_order_path(service_order),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                            :class => 'btn btn-xs btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>