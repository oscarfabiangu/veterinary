<%= form_for @service_order, :html => { :class => "form-horizontal service_order" } do |f| %>

    <% if @service_order.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@service_order.errors.count, "error") %> prohibited this service_order from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @service_order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :date, :class => 'form-control' %>
    </div>
    <%= error_span(@service_order[:date]) %>
  </div>
  <div class="control-group">
    <%= f.label :observation, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :observation, :class => 'form-control' %>
    </div>
    <%= error_span(@service_order[:observation]) %>
  </div>
  <div class="control-group">
    <%= f.label :price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :price, :class => 'form-control' %>
    </div>
    <%= error_span(@service_order[:price]) %>
  </div>
  <div class="control-group">
    <%= f.label :detail_order_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :detail_order_id, :class => 'form-control' %>
    </div>
    <%= error_span(@service_order[:detail_order_id]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            service_orders_path, :class => 'btn btn-default' %>

<% end %>
