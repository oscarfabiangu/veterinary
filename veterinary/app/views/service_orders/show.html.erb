<%- model_class = ServiceOrder -%>
<div class="content-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<section class="content">
    <dl class="dl-horizontal">
      <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
      <dd><%= @service_order.date %></dd>
      <dt><strong><%= model_class.human_attribute_name(:observation) %>:</strong></dt>
      <dd><%= @service_order.observation %></dd>
      <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
      <dd><%= @service_order.price %></dd>
      <dt><strong><%= model_class.human_attribute_name(:detail_order_id) %>:</strong></dt>
      <dd><%= @service_order.detail_order_id %></dd>
    </dl>
    
    <%= link_to t('.back', :default => t("helpers.links.back")),
                  service_orders_path, :class => 'btn btn-default'  %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_service_order_path(@service_order), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  service_order_path(@service_order),
                  :method => 'delete',
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-danger' %>
</section>