<%- model_class = Customer -%>
<div class="content-header">
  <h1>
    <%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
    <div class="pull-right">
      <%= link_to '<i class="fa fa-plus "></i> Add'.html_safe, new_customer_path, :class => 'btn btn-success btn-sm' %>
    </div>
  </h1>
</div>

<section class="content">
  <div class="box">
    <div class="box-body table-responsive no-padding">
      <table class="table table-hover">
        <tbody>
          <tr>
            <th>#</th>
            <th><%= model_class.human_attribute_name(:name) %></th>
            <th><%= model_class.human_attribute_name(:address) %></th>
            <th><%= model_class.human_attribute_name(:dni) %></th>
            <th><%= model_class.human_attribute_name(:city) %></th>
            <th><%= model_class.human_attribute_name(:phone) %></th>
            <th><%= model_class.human_attribute_name(:created_at) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
          
          <% @customers.each do |customer| %>
            <tr>
              <td><%= link_to customer.id, customer_path(customer) %></td>
              <td><%= customer.name %></td>
              <td><%= customer.address %></td>
              <td><%= customer.dni %></td>
              <td><%= customer.city %></td>
              <td><%= customer.phone %></td>
              <td><%=l customer.created_at %></td>
              <td>
                <%= link_to '<i class="fa fa-edit"></i>'.html_safe, edit_customer_path(customer), :class => 'btn btn-xs btn-warning' %>
                <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe,
                            customer_path(customer),
                            :method => :delete,
                            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                            :class => 'btn btn-xs btn-danger' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>